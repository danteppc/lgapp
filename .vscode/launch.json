{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LGApp Development (with reload)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/lgapp/app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "LGApp Production Mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/lgapp",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": ["--port", "8088"]
        }
    ]
}
